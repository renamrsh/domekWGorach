<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domek w górach"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/obraz" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/polubBtn"
            android:layout_height="wrap_content"
            android:text="POLUB"
            app:cornerRadius="0dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#008080"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/usunBtn"
            android:layout_height="wrap_content"
            android:text="USUŃ"
            app:cornerRadius="0dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#008080"
            android:layout_width="match_parent"/>

        <Button
            android:id="@+id/zapiszBtn"
            android:layout_height="wrap_content"
            android:text="ZAPISZ"
            app:cornerRadius="0dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#008080"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/polubienia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 polubień"
        android:gravity="right" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis" />

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych" />

</LinearLayout>